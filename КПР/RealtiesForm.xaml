<Window x:Class="КПР.RealtiesForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:КПР"
        mc:Ignorable="d"
        Title="RealtiesForm" Height="435" Width="641">
    <Grid Background="#FF14061B" Margin="0,0,10,10">
        <Grid.RowDefinitions>
            <RowDefinition Height="37*"/>
            <RowDefinition Height="199*"/>
        </Grid.RowDefinitions>
        <Button Content="Сгенерировать договор" HorizontalAlignment="Left" Grid.ColumnSpan="1" Width="624" FontFamily="Yu Gothic UI Semibold" FontWeight="Bold" Grid.Row="0" FontSize="22" >
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0"/>
                    <GradientStop Color="#FF7B43B4" Offset="1"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <DataGrid Grid.Row="1" Grid.ColumnSpan="1" HorizontalAlignment="Left" Height="388" VerticalAlignment="Top" Width="624" SelectionChanged="DataGrid_SelectionChanged"/>
    </Grid>
</Window>
